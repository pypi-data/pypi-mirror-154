  journal   = {CoRR},
  volume    = {abs/1705.06693},
  year      = {2017},
  url       = {http://arxiv.org/abs/1705.06693},
  eprinttype = {arXiv},
  eprint    = {1705.06693},
  biburl    = {https://dblp.org/rec/journals/corr/LoshchilovGB17.bib},
